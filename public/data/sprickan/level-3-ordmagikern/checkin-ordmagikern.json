{
  "id": "checkin-ordmagikern",
  "type": "story",
  "description": "You are with ordmagikern",
  "opens": [
    "checkin-ordmagikern-choice-circle",
    "checkin-ordmagikern-choice-square"
  ],
  "events": [
    {
      "action": "choiceBasedOnTags",
      "tags": ["appledricka"],
      "eventIfPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-3-ordmagikern/checkin-ordmagikern.mp3", "./level-3-ordmagikern/checkin-ordmagikern-b-spar.mp3"],

        "then": {
          "action": "playAudio",
          "wait": 0,
          "audioFilenames": [
            "./level-3-ordmagikern/continuation-appledricka.mp3"],

          "then": {
            "action": "playAudio",
            "wait": 0,
            "audioFilenames": [
              "./level-3-ordmagikern/continuation-ordmagikern.mp3"
            ]
          }
        }
      },
      "eventIfNotPresent": {
        "action": "noop"
      }
    },
    {
      "action": "choiceBasedOnTags",
      "tags": ["brannvin"],
      "eventIfPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-3-ordmagikern/checkin-ordmagikern.mp3", "./level-3-ordmagikern/checkin-ordmagikern-b-spar.mp3"],

        "then": {
          "action": "playAudio",
          "wait": 0,
          "audioFilenames": ["./level-3-ordmagikern/continuation-brannvin.mp3"],
          
          "then": {
            "action": "playAudio",
            "wait": 0,
            "audioFilenames": [
              "./level-3-ordmagikern/continuation-ordmagikern.mp3"
            ]
          }
        }
      },

      "eventIfNotPresent": {
        "action": "noop"
      }
    },
    {
      "action": "choiceBasedOnTags",
      "tags": ["no-gift"],
      "eventIfPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-3-ordmagikern/checkin-ordmagikern.mp3", "./level-3-ordmagikern/checkin-ordmagikern-b-spar.mp3"],

        "then": {
          "action": "playAudio",
          "wait": 0,
          "audioFilenames": [
            "./level-3-ordmagikern/continuation-ordmagikern.mp3"
          ]
        }
      },

      "eventIfNotPresent": {
        "action": "noop"
      }
    },

    {
      "action": "playBackgroundAudio",
      "audioFilename": "./level-global/tystnad.mp3",
      "loop": true,
      "cancelOnLeave": true,
      "wait": 0
    }
  ]
}
