{
  "id": "checkin-mammon",
  "type": "story",
  "description": "You have reached Mammon",
  "opens": [],

  "events": [
    {
      "action": "choiceBasedOnTags",
      "tags": ["ringen"],
      "eventIfPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": [
          "./level-3-ordmagikern/checkin-ordmagikern.mp3",
          "./level-3-ordmagikern/checkin-ordmagikern-b-spar.mp3"
        ],

        "then": {
          "action": "playAudio",
          "wait": 0,
          "audioFilenames": [
            "./level-3-ordmagikern/continuation-appledricka.mp3"
          ],

          "then": {
            "action": "playAudio",
            "wait": 0,
            "audioFilenames": [
              "./level-3-ordmagikern/continuation-ordmagikern.mp3"
            ],

            "then": {
              "action": "openStation",
              "toStation": "qr-assemble-mammon"
            }
          }
        }
      },
      "eventIfNotPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-1-mammon/checkin-mammon.mp3"],

        "then": {
          "action": "openStation",
          "toStation": "checkin-stadsungarna"
        }
      }
    }
  ]
}
