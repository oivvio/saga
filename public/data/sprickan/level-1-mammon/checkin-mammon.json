{
  "id": "checkin-mammon",
  "type": "story",
  "description": "You have reached Mammon",
  "opens": [],
  "tags": ["mammon"],

  "events": [
    {
      "action": "choiceBasedOnTags",
      "tags": ["ringen"],
      "eventIfPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-1-mammon/ring-tillbaka-till-mammon_converted.WebM"],

        "then": {
          "action": "openStations",
          "toStations": 
          ["checkin-mammon-choice-circle, checkin-mammon-choice-square"]
        }
      },
      "eventIfNotPresent": {
        "action": "playAudio",
        "wait": 0,
        "audioFilenames": ["./level-1-mammon/checkin-mammon_converted.WebM"],

        "then": {
          "action": "openStation",
          "toStation": "qr-assemble"
        }
      }
    }
  ]
}
