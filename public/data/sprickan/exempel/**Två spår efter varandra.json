{
  "id": "fonstret",
  "type": "story",
  "description": "play audio. starts a level timer that wont end until leaving level 1.",
  "opens": ["choice-circle-gravkapellet", "choice-square-barngravarna"],

  "helpAudioFilenames": [
    "./level-0-start/start-help-1_converted.WebM",
    "./level-0-start/start-help-2_converted.WebM"
  ],

  "events": [
    {
      "action": "playAudio",
      "audioFilenames": ["./level-0-start/start_converted.WebM", "./level-0-start/start-b_converted.WebM"],
      "wait": 0,
      "then": {
        "action": "playAudioBasedOnAdHocValue",
        "key": "powerName",
        "audioFilenameMap": {
          "sad,sun": "./level-0-start/your-name-is-sad-sun_converted.WebM",
          "sad,wind": "./level-0-start/your-name-is-sad-wind_converted.WebM",
          "happy,moon": "./level-0-start/your-name-is-happy-moon_converted.WebM",
          "happy,sun": "./level-0-start/your-name-is-happy-sun_converted.WebM",
          "happy,wind": "./level-0-start/your-name-is-happy-wind_converted.WebM",
          "angry,moon": "./level-0-start/your-name-is-angry-moon_converted.WebM",
          "angry,sun": "./level-0-start/your-name-is-angry-sun_converted.WebM",
          "angry,wind": "./level-0-start/your-name-is-angry-wind_converted.WebM"
        }
      }
    },
    {
      "action": "playBackgroundAudio",
      "audioFilename": "./level-0-start/startBackground_converted.WebM",
      "loop": true,
      "cancelOnLeave": true,
      "wait": 0
    },

    {
      "action": "playBackgroundAudio",
      "audioFilename": "./level-0-start/startBackground2_converted.WebM",
      "loop": true,
      "cancelOnLeave": true,
      "wait": 3
    },

    {
      "action": "pickRandomSample",
      "population": [
        ["sad", "sun"],
        ["sad", "wind"],
        ["happy", "moon"],
        ["happy", "sun"],
        ["happy", "wind"],
        ["angry", "moon"],
        ["angry", "sun"],
        ["angry", "wind"]
      ],
      "key": "powerName"
    }
  ]
}
