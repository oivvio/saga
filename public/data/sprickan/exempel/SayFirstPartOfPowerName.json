{
  "id": "fonstret",
  "type": "story",
  "description": "play audio. starts a level timer that wont end until leaving level 1.",
  "opens": ["choice-circle-gravkapellet", "choice-square-barngravarna"],

  "events": [
    {
      "action": "playAudioBasedOnAdHocValue",
      "key": "powerName",
      "audioFilenameMap": {
        "sad,sun": "./level-0-start/the-first-part-of-your-power-name-is-sad_converted.WebM",
        "sad,wind": "./level-0-start/the-first-part-of-your-power-name-is-sad_converted.WebM",
        "happy,moon": "./level-0-start/the-first-part-of-your-power-name-is-happy_converted.WebM",
        "happy,sun": "./level-0-start/the-first-part-of-your-power-name-is-happy_converted.WebM",
        "happy,wind": "./level-0-start/the-first-part-of-your-power-name-is-happy_converted.WebM",
        "angry,moon": "./level-0-start/the-first-part-of-your-power-name-is-angry_converted.WebM",
        "angry,sun": "./level-0-start/the-first-part-of-your-power-name-is-angry_converted.WebM",
        "angry,wind": "./level-0-start/the-first-part-of-your-power-name-is-angry_converted.WebM"
      },

      "then": {
        "action": "playAudio",
        "audioFilenames": [
          "./level-0-start/start_converted.WebM",
          "./level-0-start/start-b_converted.WebM"
        ],
        "wait": 0
      }
    }
  ]
}
