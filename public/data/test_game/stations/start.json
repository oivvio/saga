{
  "id": "start",
  "type": "story",
  "description": "play audio. starts a level timer that wont end until leaving level 1.",
  "opens": ["start-option-a", "start-option-b"],

  "helpAudioFilenames": [
    "./audio/start-help-1_converted.WebM",
    "./audio/start-help-2_converted.WebM"
  ],

  "events": [
    {
      "action": "playAudio",
      "audioFilenames": ["./audio/start_converted.WebM", "./audio/start-b_converted.WebM"],
      "wait": 0,
      "then": {
        "action": "playAudioBasedOnAdHocValue",
        "key": "powerName",
        "audioFilenameMap": {
          "sad,sun": "./audio/your-name-is-sad-sun_converted.WebM",
          "sad,wind": "./audio/your-name-is-sad-wind_converted.WebM",
          "happy,moon": "./audio/your-name-is-happy-moon_converted.WebM",
          "happy,sun": "./audio/your-name-is-happy-sun_converted.WebM",
          "happy,wind": "./audio/your-name-is-happy-wind_converted.WebM",
          "angry,moon": "./audio/your-name-is-angry-moon_converted.WebM",
          "angry,sun": "./audio/your-name-is-angry-sun_converted.WebM",
          "angry,wind": "./audio/your-name-is-angry-wind_converted.WebM"
        }
      }
    },
    {
      "action": "playBackgroundAudio",
      "audioFilename": "./audio/startBackground_converted.WebM",
      "loop": true,
      "cancelOnLeave": true,
      "wait": 0
    },

    {
      "action": "playBackgroundAudio",
      "audioFilename": "./audio/startBackground2_converted.WebM",
      "loop": true,
      "cancelOnLeave": true,
      "wait": 3
    },

    {
      "action": "pickRandomSample",
      "population": [
        ["sad", "sun"],
        ["sad", "wind"],
        ["happy", "moon"],
        ["happy", "sun"],
        ["happy", "wind"],
        ["angry", "moon"],
        ["angry", "sun"],
        ["angry", "wind"]
      ],
      "key": "powerName"
    },

    {
      "action": "startTimer",
      "name": "startStationTimer",
      "time": 300,
      "then": {
        "action": "goToStation",
        "toStation": "you-loose"
      }
    }
  ]
}
